@model IEnumerable<JinxiaocunApp.Models.Role>

@{
    ViewBag.Title = "Index";
}

<div class="panel panel-info">
<p>
    @Ajax.ActionLink("新建", "Create",null, new AjaxOptions { UpdateTargetId = "formDiv", HttpMethod = "Get", InsertionMode = InsertionMode.Replace, OnSuccess = "showW('岗位信息-新建')" }, new { @class = "btn" })
</p>
<table class="table-striped table-hover table-bordered" width="100%">
    <tr class="alert-info">
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th>
            职员
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleDesc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @item.GetUsers()
            
        </td>
        <td>
            @Html.DisplayFor(modelItem=>item.RoleDesc)
        </td>
        <td>
            @Ajax.ActionLink("编辑", "Edit", new { id = item.RoleId, SuperRef = ViewBag.SuperRef }, new AjaxOptions { UpdateTargetId = "formDiv", HttpMethod = "Get", InsertionMode = InsertionMode.Replace, OnSuccess = "showW('岗位信息-编辑')" })
             |
             @Ajax.ActionLink("查看", "Details", new { id = item.RoleId }, new AjaxOptions { UpdateTargetId = "formDiv", HttpMethod = "Get", InsertionMode = InsertionMode.Replace, OnSuccess = "showW('岗位信息-查看')" })
             |
             @Ajax.ActionLink("删除", "Delete", new { id = item.RoleId }, new AjaxOptions { UpdateTargetId = "formDiv", HttpMethod = "Get", InsertionMode = InsertionMode.Replace, OnSuccess = "showW('岗位信息-删除')" })
        </td>
    </tr>
}

</table>
</div>