@model JinxiaocunApp.Models.LocalPasswordModel

<h3>更改密码</h3>
@using (Ajax.BeginForm("ChangePassword","Account",new AjaxOptions { UpdateTargetId = "formDiv1", HttpMethod = "Post", InsertionMode = InsertionMode.Replace, OnSuccess = "showDIV('formDiv1','修改密码',400,200)" }))
{
@*@using (Html.BeginForm())
{*@
    @*@Html.AntiForgeryToken()*@
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>“更改密码”表单</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.OldPassword)
                @Html.PasswordFor(m => m.OldPassword)
                @Html.ValidationMessageFor(m=>m.OldPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword)
                @Html.ValidationMessageFor(m => m.NewPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input type="submit" value="更改密码" />
    </fieldset>
}
<script>
    $.getScript("/Scripts/jquery.validate.unobtrusive.js");
</script>